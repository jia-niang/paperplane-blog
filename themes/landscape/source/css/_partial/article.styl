.article
  margin-top: 10px

.article-post
  border-radius: 3px
  box-shadow: 0px 0px 4px 2px #bbb;
  border: 0.7em solid transparent;
  box-sizing: border-box
  background: linear-gradient(white, white) padding-box, repeating-linear-gradient(-45deg, #c0332f 0, #c0332f 12.5%, color-letter-white 0, color-letter-white 25%, #356daa 0, #356daa 37.5%, color-letter-white 0, color-letter-white 50%) 0 / 6em 6em
  .article-inner
    border-radius: 3px
    overflow: hidden
    border: none
    box-shadow: none
    margin: -1px
    background-image: url('../css/images/absurdity.png')
    position: relative
    .article-postmark
      height: 190px
      position: absolute
      transform: rotate(25deg)
      right: -15px
      top: 0
      pointer-events: none

@media mq-mobile
  .article-postmark
    display: none

.article-inner
  @extend $block
  overflow: hidden
  
.article-meta
  clearfix()
  font-size: 1em
  padding: 8px 0
  margin: 0 article-padding
  position: relative
  border-bottom: 1px solid #ddd
  border-top: 1px solid #ddd
  line-height: 1.3em
  font-family: font-serif

.article-date
  @extend $block-caption
  margin-bottom: 0

.article-category
  position: relative
  line-height: inherit
  color: #ccc
  text-shadow: 0 1px #fff
  margin-left: 16px
  padding-left: 16px
  &:before
    content: ''
    position: absolute
    top: 0
    height: 1em
    left: 0
    width: 1px
    border-right: 1.5px solid #ddd

.article-category-link
  @extend $block-caption
  line-height: inherit
  margin: 0 12px 0
  &:first-of-type
    margin-left: 0

.article-header
  padding: 26px article-padding

.article-title
  text-decoration: none
  max-width: 660px
  max-width: calc(100% - 200px)
  font-size: 2em
  font-weight: bold
  color: color-default
  line-height: 1.5em
  transition: color 0.2s
  font-family: font-serif
  a&:hover
    color: color-link

@media mq-mobile
  .article-title
    text-align: center
    max-width: 100%

.article-entry
  @extend $base-style
  clearfix()
  color: color-default
  padding: 0 article-padding
  letter-spacing: 0.3px
  table
    line-height: line-height
    margin: line-height 0
  p
    line-height: line-height
    margin: 0.8em 0
  h1, h2, h3, h4, h5, h6
    font-weight: bold
    line-height: line-height-title
    margin: 70px 0 25px
    color: color-default
    scroll-margin-top: banner-height
    code
      font-weight: normal
    &+p
      margin-top: 0.8em
  h1+h2, h2+h3, h3+h4, h4+h5, h5+h6
    margin-top: 0.8em
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
    li
      margin: 0.2em 0
      li
        list-style-type: circle;
    li p
      margin: 0 0
  p
    &+ul, &+ol, &+dl
      margin-top: -0.5em
  li p
    &+ul, &+ol, &+dl
      margin-top: 0em
  figure
    &::-webkit-scrollbar
      width: 8px;
      height: 8px
      background-color: #f5f5f5;
      border-radius: 0 0 3px 3px;
    &::-webkit-scrollbar-thumb
      background-color: rgba(131, 128, 128, .3);
      border-radius: 0 0 3px 3px;
    &::-webkit-scrollbar-track
      background-color: transparent;
      border-radius: 0 0 3px 3px;
      box-shadow: inset 0 0 3px rgba(0,0,0,.1);
    &+h1, &+h2, &+h3, &+h4, &+h5, &+h6
      margin-top: 70px
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid color-border
    padding: 10px 0
  blockquote
    position relative
    &::before
      content: ''
      position absolute
      left 0
      top 0
      bottom 0
      border-left: 4px solid #ccc
    p
      line-height: 1.75em;
      margin: 0.6em 0
    font-family: font-sans
    margin: 1.6em 0
    padding: 1px 20px
    background-color: #eee;
    font-size: 0.9em;
    code
      background: #ccc;
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
    figure:last-of-type
      margin-bottom: 20px
    figure:first-of-type
      margin-top: 20px
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

.article-more-link a
  display: inline-block
  line-height: 1em
  padding: 6px 15px
  border-radius: 15px
  color: color-grey
  text-shadow: 0 1px #fff
  text-decoration: none
  &:hover
    background: color-link
    color: #fff
    text-decoration: none
    text-shadow: 0 1px darken(color-link, 20%)

.article-footer
  clearfix()
  font-size: 20px
  line-height: line-height
  margin: 40px article-padding 10px
  &.homepage
    border-top: none
  a
    color: color-grey
    text-decoration: none
    &:hover
      color: color-default

.article-tag-list
  height: 40px
  padding-top: 10px
  border-top: 1px solid #ddd
  font-family: font-serif

.article-tag-list-item
  float: left
  margin-right: 10px

.article-tag-list-link
  &:before
    content: "#"

.article-comment-link
  @extend $block-caption
  text-shadow: 0 1px #fff
  text-decoration: none
  position: relative
  margin-left: 0
  margin-bottom: 0
  padding-left: 16px
  &:before
    content: ''
    position: absolute
    top: 0
    height: 1em
    left: 0
    width: 1px
    border-right: 1.5px solid #ddd

#article-nav
  position: relative
  display: flex
  padding-top: 10px
  font-size: 0.8em
  border-top: 1px solid #ddd;
  flex-wrap: wrap
  @media mq-normal
    flex-wrap: nowrap
    &:before
      content: ''
      position: absolute
      top: 10px
      bottom: 0px
      left: 50%
      width: 1px
      border-left: 1.5px solid #ddd

.article-nav-link-wrap
  text-decoration: none
  text-shadow: 0 1px #fff
  color: color-grey
  box-sizing: border-box
  margin-top: 0
  text-align: center
  display: block
  &:hover
    color: color-default
  @media mq-normal
    width: 50%

#article-nav-newer
  @media mq-normal
    display: inline-block
    text-align: center
    padding-right: 20px

#article-nav-older
  @media mq-normal
    display: inline-block
    text-align: center
    padding-left: 20px

.article-nav-caption
  text-transform: uppercase
  letter-spacing: 2px
  color: color-border
  line-height: 1em
  font-weight: bold
  #article-nav-newer &
    margin-right: -2px

.article-nav-title
  font-size: 1em
  line-height: line-height
  margin-top: 0
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
  max-width: 300px
  @media mq-normal
    max-width: 380px

.article-gallery
  background: #000
  position: relative

.article-gallery-photos
  position: relative
  overflow: hidden

.article-gallery-img
  display: none
  max-width: 100%
  &:first-child
    display: block
  &.loaded
    position: absolute
    display: block
  img
    display: block
    max-width: 100%
    margin: 0 auto

#article-toc
  position: fixed
  padding: 0 20px
  box-sizing: border-box
  top: banner-height + 20px
  left: calc(50vw + 460px)
  right: 0
  position: fixed
  display: flex
  justify-content: start
  .at-container
    min-width: 220px
    max-width: 300px
  .at-title
    color: #666
    font-size: 20px
    padding-bottom: 10px
    cursor: pointer
    font-family: font-serif
    font-weight: 600
  .at-scroll
    overflow-y: auto
    max-height: calc(100vh - 100px - 20px - 40px - 20px)
    padding-right: 15px
    &::-webkit-scrollbar
      width: 4px;
      height: 4px
      background-color: #eee;
      border-radius: 2px
    &::-webkit-scrollbar-thumb
      background-color: #ccc;
      border-radius: 2px
    &::-webkit-scrollbar-track
      background-color: transparent;
      border-radius: 2px;
  .toc
    display: block
  .toc-item
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    padding: 1px 0
  .toc-link
    text-decoration: none
    font-size: 14px
  .toc-link,.toc-text
    &:hover
      color: #666 !important
  .toc-level-1
    color: #888
    .toc-link,.toc-text
      color: #888
  .toc-level-2
    padding-left: 8px
    color: #aaa
    .toc-link,.toc-text
      color: #aaa

@media mq-tablet
  #article-toc
    display: none