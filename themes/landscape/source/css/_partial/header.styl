#header
  height: banner-height
  position: relative

#header-wrapper
  position: fixed
  left: 0
  right: 0
  top: 0
  background-color: transparent;
  background-image: radial-gradient(transparent 1px, #fff 1px);
  background-size: 4px 4px;
  backdrop-filter: blur(3px);
  mask: linear-gradient(rgb(0, 0, 0) 60%, rgba(0, 0, 0, 0) 100%);
  opacity: 1;
  z-index: 10
  height: banner-height
  transition: all 0.2s ease-out

#header-inner
  transition: all 0.2s ease-out
  height: banner-height
  display: flex
  align-items: center

#header-title
  display: inline-flex
  align-items: center
  height: banner-height

@media mq-mobile
  #header-title
    display: flex
    flex-grow: 1;
    justify-content: center
  #header-wrapper
    justify-content: center


#header-title-txt
  text-decoration: none
  color: #444
  font-weight: normal
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.2)
  font-size: logo-size
  letter-spacing: 2px
  font-family: font-serif
  line-height: 1em

#header-title-icon
  height: 40px
  width: 40px
  vertical-align: baseline
  margin-bottom: -6px

@media mq-mobile
  #header-title-icon
    display: none

#header-links
  color: #444
  display: inline-flex
  align-items: center
  font-family: font-serif
  margin-left: 30px
  height: banner-height
  a,span
    line-height: 1.2em
    margin-right: 24px
    text-decoration: none
    color: inherit
    position: relative
    &.link-current
      cursor: default
      font-weight: bold
      &:hover::after
        opacity: 0;
    &::after
      border-bottom: 1px solid currentColor;
      bottom: 0;
      content: "";
      height: 0;
      left: 0;
      opacity: 0;
      position: absolute;
      right: 0;
      transition: all .2s linear;
    &:hover::after
      opacity: 1;

@media mq-mobile
  #header-links
    display: none

@media mq-tablet
  #header-links
    display: none

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 9999px
  border: 1px solid rgba(0, 0, 0, 0.3)
  // box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777