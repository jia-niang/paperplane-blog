// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #3c3c43
color-grey = #999
color-border = #aaa
color-link = #258fb8
color-sidebar-text = #0f0d0d
color-widget-background = #ddd
color-widget-border = #ccc
color-footer-background = #262a30
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-linkedin = #0077B5
color-letter-white = #eee
color-letter-red = #c0332f
color-letter-blue = #356daa

// Fonts
font-sans = -apple-system, BlinkMacSystemFont,
    "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-serif = swift, fz-yansong-zhun, Georgia, "Times New Roman", -apple-system, BlinkMacSystemFont,
    "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-mono-ms = "Source Code Pro", -apple-system, sans-serif
font-size = 18px
line-height = 1.7em
line-height-title = 2em

// Header
logo-size = 40px
subtitle-size = 16px
banner-height = 100px
banner-url = hexo-config("banner")

sidebar = hexo-config("sidebar")

// Layout
block-margin = 20px
article-padding = 20px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 1400px)"
mq-normal = "screen and (min-width: 1401px)"